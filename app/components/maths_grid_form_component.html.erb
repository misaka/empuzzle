<h1 class="ml-0"><%= t "puzzles.maths_grid.setup_heading" %></h2>

  <%= form_for @puzzle, url: puzzles_path, method: "POST" do |form| %>
  <%= hidden_field_tag :puzzle_type, "maths_grid" %>

  <div class="flex flex-row">
    <div class="flex flex-col">
      <%= form.label :rows %>
      <%= form.number_field :rows %>
    </div>
    <div class="flex flex-col">
      <%= form.label :columns %>
      <%= form.number_field :columns %>
    </div>

    <div class="flex flex-col">
      <%= form.label :level %>
      <%= form.select :level, Puzzles::MathsGrid.levels.keys %>
    </div>
  </div>


  <%= label_tag "reward" %>
  <%= text_field_tag :reward, @reward, size: 40 %>

  <%= submit_tag t "puzzles.generate_new_puzzle" %>
<% end %>
