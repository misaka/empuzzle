<nav class="max-w-screen-lg container print:hidden mx-auto mt-4 px-5" aria-label="Breadcrumb">
  <div>
    <ol class="list-reset flex">
      <% @crumbs.each_with_index do |crumb, idx| %>
        <li class="after:content-['>'] after:px-2 last:after:content-['']">
          <% if crumb[:path].present? %>
            <%= link_to crumb[:text], crumb[:path], class: "underline" %>
          <% else %>
            <%= crumb[:text] %>
          <% end %>
        </li>
      <% end %>
    </ol>
  </div>
</nav>
