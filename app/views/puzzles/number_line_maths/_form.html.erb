<%= form_for @puzzle, url: puzzles_number_line_maths_path, method: :get do |form| %>
    <h2>Number Line Maths Setup</h2>

    <dl class="kids-puzzles-setup">
        <div class="kids-puzzles-setup-field">
            <dt><%= form.label :rows %></dt>
            <dd><%= form.number_field :rows %></dd>
        </div>
    </dl>

    <%= label_tag "reward" %></dt>
    <%= text_field_tag :reward, @reward, size: 40 %>

    <h2>Line Setup</h2>

    <dl class="kids-puzzles-setup">
        <div class="kids-puzzles-setup-field">
            <dt><%= form.label :line_range_from %></dt>
            <dd><%= form.number_field :line_range_from %></dd>

            <dt><%= form.label :line_range_to, "To" %></dt>
            <dd><%= form.number_field :line_range_to %></dd>
        </div>
    </dl>

    <h2>Addition Numbers Setup</h2>

    <dl class="kids-puzzles-setup">
        <div class="kids-puzzles-setup-field">
            <dt><%= form.label :addition_numbers_from %></dt>
            <dd><%= form.number_field :addition_numbers_from %></dd>

            <dt><%= form.label :addition_numbers_to, "to" %></dt>
            <dd><%= form.number_field :addition_numbers_to %></dd>
        </div>
    </dl>

    <dl class="kids-puzzles-setup">
        <div class="kids-puzzles-setup-field">
            <dt><%= form.label :addition_numbers_count_min %></dt>
            <dd><%= form.number_field :addition_numbers_count_min %></dd>

            <dt><%= form.label :addition_numbers_count_max, "Max" %></dt>
            <dd><%= form.number_field :addition_numbers_count_max %></dd>
        </div>
    </dl>

        <%= submit_tag "Generate new puzzle" %>
<% end %>
