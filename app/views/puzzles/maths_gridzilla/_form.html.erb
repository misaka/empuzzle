<%= form_for @puzzle, url: puzzles_maths_gridzilla_path, method: :get do |form| %>
    <h2>Maths Grid Setup</h2>

    <dl class="kids-puzzles-setup">
        <div class="kids-puzzles-setup-field">
            <dt><%= form.label :rows %></dt>
            <dd><%= form.number_field :rows %></dd>
        </div>
        <div class="kids-puzzles-setup-field">
            <dt><%= form.label :columns %></dt>
            <dd><%= form.number_field :columns %></dd>
        </div>
    </dl>

    <%= label_tag "reward" %></dt>
    <%= text_field_tag :reward, @reward, size: 40 %>

    <h2>Addition Setup</h2>

    <dl class="kids-puzzles-setup">
        <div class="kids-puzzles-setup-field">
            <dt><%= form.label :addition_count_min, "Minimum number of addition numbers" %></dt>
            <dd><%= form.number_field :addition_count_min %></dd>

            <dt><%= form.label :addition_count_max, "To" %></dt>
            <dd><%= form.number_field :addition_count_max %></dd>
        </div>

        <div class="kids-puzzles-setup-field">
            <dt><%= form.label :addition_from, "Addition numbers from" %></dt>
            <dd><%= form.number_field :addition_from %></dd>

            <dt><%= form.label :addition_to, "To" %></dt>
            <dd><%= form.number_field :addition_to %></dd>
        </div>
    </dl>

    <h2>Subtraction Setup</h2>

    <dl class="kids-puzzles-setup">
        <div class="kids-puzzles-setup-field">
            <dt><%= form.label :subtraction_count_min, "Minimum number of subtraction numbers" %></dt>
            <dd><%= form.number_field :subtraction_count_min %></dd>

            <dt><%= form.label :subtraction_count_max, "To" %></dt>
            <dd><%= form.number_field :subtraction_count_max %></dd>
        </div>

        <div class="kids-puzzles-setup-field">
            <dt><%= form.label :subtraction_from, "Subtraction numbers from" %></dt>
            <dd><%= form.number_field :subtraction_from %></dd>

            <dt><%= form.label :subtraction_to, "To" %></dt>
            <dd><%= form.number_field :subtraction_to %></dd>
        </div>
    </dl>

    <h2>Multiplication Setup</h2>

    <dl class="kids-puzzles-setup">
        <div class="kids-puzzles-setup-field">
            <dt><%= form.label :factors_from %></dt>
            <dd><%= form.number_field :factors_from %></dd>

            <dt><%= form.label :factors_to, "To" %></dt>
            <dd><%= form.number_field :factors_to %></dd>
        </div>
    </dl>

    <dl class="kids-puzzles-setup">
        <div class="kids-puzzles-setup-field">
            <dt><%= form.label :factors_count_min, "Minimum Number of Factors" %></dt>
            <dd><%= form.number_field :factors_count_min %></dd>

            <dt><%= form.label :factors_count_max, "Maximum" %></dt>
            <dd><%= form.number_field :factors_count_max %></dd>
        </div>
    </dl>

    <h2>Division Setup</h2>

    <dl class="kids-puzzles-setup">
        <div class="kids-puzzles-setup-field">
            <dt><%= form.label :dividends_from %></dt>
            <dd><%= form.number_field :dividends_from %></dd>

            <dt><%= form.label :dividends_to, "To" %></dt>
            <dd><%= form.number_field :dividends_to %></dd>
        </div>

        <div class="kids-puzzles-setup-field">
            <dt><%= form.label :divisors_from %></dt>
            <dd><%= form.number_field :divisors_from %></dd>

            <dt><%= form.label :divisors_to, "To" %></dt>
            <dd><%= form.number_field :divisors_to %></dd>
        </div>
    </dl>

    <%= submit_tag "Generate new puzzle" %>
<% end %>
