<div class="kids-puzzles-content">
<div class="kids-puzzles-puzzle kids-puzzles-number-line-maths">
    <% @puzzle.exercises.each do |exercise| %>
    <div class="kids-puzzles-number-line-maths-line">
        <span class="kids-puzzles-number-line-maths-exercise">
            <%= render "puzzles/number_line_maths/#{exercise.type}_line", exercise: exercise %>
        </span>
        <span class="kids-puzzles-number-line-maths-actual-number-line">
            <%= render "number_line", puzzle: @puzzle %>
        </span>
    </div>
<% end %>
</div>

<% if @reward.present? %>
    Reward: <%= @reward %>
<% end %>

</div>

<hr>

