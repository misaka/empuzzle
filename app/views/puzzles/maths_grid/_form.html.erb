<%= form_tag puzzles_maths_grid_path, method: :get do |form| %>
    <h2>Grid Setup</h2>

    <dl class="kids-puzzles-setup">
        <div class="kids-puzzles-setup-field">
            <dt><%= label_tag "rows" %></dt>
            <dd><%= number_field_tag :rows, @puzzle.rows %></dd>
        </div>
        <div class="kids-puzzles-setup-field">
            <dt><%= label_tag "columns" %></dt>
            <dd><%= number_field_tag :columns, @puzzle.columns %></dd>
        </div>
    </dl>

    <h2>Multiplication Setup</h2>

    <dl class="kids-puzzles-setup">
        <div class="kids-puzzles-setup-field">
            <dt><%= label_tag "Factors from" %></dt>
            <dd><%= number_field_tag :factors_from, @puzzle.factors_from %></dd>
            <dt><%= label_tag "Factors to" %></dt>
            <dd><%= number_field_tag :factors_to, @puzzle.factors_to %></dd>
        </div>
    </dl>

    <%= submit_tag "Generate new puzzle" %>
<% end %>
